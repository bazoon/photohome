<%= simple_form_for([:admin, @document]) do |f| %>
  <%= f.error_notification %>

    <div class="form-group">
      <%= f.input :title,:input_html => {class: "form-control"} %>
    </div>
    
    <div class="form-group">
      <%= f.input :creation_date,:input_html => {class: "form-control"} %>
    </div>

    <div class="form-group">
      <%= f.input :content,:input_html => {class: "redactor form-control"} %>
    </div>

    <div class="form-group">
      <%= f.input :status, :input_html => {class: "form-control"} %>
    </div>

    <%= f.button :submit,value: t(:save),:input_html => {class: "btn btn-default"} %>
  
<% end %>

<br>
