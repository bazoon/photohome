<%= simple_form_for [:admin, @site_rule] do |f| %>
<%= f.error_notification %>

    <div class="form-group">
    <%= f.input :locale, collection: [:ru, :en], :input_html => {class: "form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :rules,:input_html => {class: "form-control redactor"} %>
    </div>
    <div class="form-group">
    <%= f.input :rules_digest,:input_html => {class: "form-control redactor"} %>
    </div>

    <%= f.button :submit, value: t('save'), class: "btn btn-default" %>
  
<% end %>
