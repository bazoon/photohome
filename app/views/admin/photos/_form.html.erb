<%= simple_form_for([:admin, @photo]) do |f| %>
  <%= f.error_notification %>

    <div class="form-group">
    <%= f.input :title,:input_html => {class: "form-control"} %>
    </div>
    
    <div class="form-group">
    <%= f.association :topic,:input_html => {class: "form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :destination_id,collection: Photo::DESTINATIONS, label_method: Photo::LABEL, value_method: Photo::VALUE,
    :input_html => {class: "form-control"}%>
    </div>

    <div class="form-group">
    <%= f.association :age_policy, collection: Admin::AgePolicy.order('age'),:input_html => {class: "form-control"}%>
    </div>

    
  
  
    <%= f.button :submit,value: t(:save), class: "btn btn-default" %>
  
<% end %>

<br>