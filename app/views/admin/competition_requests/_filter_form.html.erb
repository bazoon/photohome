<%= simple_form_for(:filter, url: admin_competition_requests_path(@competition), method: :get) do |f| %>
  <%= f.error_notification %>


    <div class="form-group">
    <%= f.input :response_id, 
        label: t('choose_response'),
        collection: CompetitionRequest::RESPONSES,
        label_method: CompetitionRequest::LABEL,
        value_method: CompetitionRequest::VALUE,
        input_html: { class: "form-control" },
        selected: @response_id,
        include_blank: "Все"
    %>

    </div>
    
    
    <%= f.button :submit, value: t("filter"), input_html: {class: "btn btn-default" } %>
  
<% end %>
