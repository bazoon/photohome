<%= simple_form_for([:admin,@novelty]) do |f| %>
  <%= f.error_notification %>

  
    <div class="form-group">
    <%= f.input :title,:input_html => {class: "form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :content,  :input_html => { :class => "redactor form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :digest,  :input_html => { :class => "redactor form-control"} %>
    </div>

    <div class="form-group">
    <%= f.input :published %>
    </div>
  
  <div class="form-actions">
    <%= f.button :submit,class: "btn btn-primary" %>
  </div>
<% end %>

