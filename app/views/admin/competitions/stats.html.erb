<h1>Статистика</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Всего работ</td>
      <td><%=  @stats[:photo_count]%></td>
    </tr>
    <tr>
      <td>Членов жюри</td>
      <td><%= @stats[:jury_count]%></td>
    </tr>
    <tr>
      <td>Общее число оценок</td>
      <td><%= @stats[:should_rate_count]%></td>
    </tr>
    <tr>
      <td>Проставлено оценок</td>
      <td><%= @stats[:rated_count]%></td>
    </tr>

  </tbody>
</table>

<table class="table table-striped">
 <thead>
    <tr>
      <th>Имя</th>
      <th>Количество проставленных оценок</th>
    </tr>
  </thead>
  <tbody>
    <% @stats[:jury_members].each do |jm| %>
    <tr>
      <td><%= jm[:name] %></td>
      <td><%= jm[:count] %></td>
    </tr>
    <%- end  %>
  </tbody>
</table>