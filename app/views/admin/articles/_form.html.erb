<%= simple_form_for([:admin, @admin_article]) do |f| %>
  <%= f.error_notification %>


    <div class="form-group">
    <%= f.input :title,:input_html => {class: "form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :content,  :input_html => { :class => "redactor form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :digest,  :input_html => { :class => "redactor form-control"} %>
    </div>

    <%= f.button :submit,input_html: {class: "btn btn-default"} %>
  
<% end %>
