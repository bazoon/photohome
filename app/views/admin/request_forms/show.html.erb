<h1>Заявки</h1>

<table class="table table-striped">
  
  <tr>
    <th>ФИО</th>
    <th>Страна</th>
    <th>Дата</th>
    <th>Решение</th>
    <th>Количество номинаций</th>  
    <th class="small">Почта</th>  
    <th class="small">Телефон</th>  
    <th class="small">Примечания</th>  
  </tr>

  <%- @competition_requests.each do |request| %>

    <tr>
      <td><%= request.user_name %></td>
      <td><%= request.user.country_name %></td>
      <td><%= ld request.created_at %></td>
      <td><%= request.decision %>  </td>
      <td><%= request.permited_nomination_count %></td>  
      <td class="small"><%= request.user.email %></td>
      <td class="small"><%= request.user.phone %></td>
      <td></td>
    </tr>

  <%- end %>


</table>