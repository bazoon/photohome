<div id="admin_letter_form">
<button class="my btn btn-default btn-lg" id="button" style="display: none" data-toggle="modal" data-target="#admin_letter">

</button>

<div class="modal fade" id ="admin_letter">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Письмо пользователю</h4>
      </div>
      <div class="modal-body">
         

        <%= render partial: 'letters/admin_form', locals: {from_user: from_user, to_user: to_user, letter: letter} %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
        
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

</div>