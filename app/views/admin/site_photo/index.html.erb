<h1><%= t(".title") %></h1>
<br>
<%= link_to t('.new'), new_admin_site_photo_path, {class: "btn btn-primary"} %>

<br><br>  

<%= will_paginate @site_photos %>

<div class="row">

    <% @site_photos.each_with_index do |photo,index| %>
  
    <div class="col-sm-3" >
    <div class="thumbnail">  
    
    <%= render partial: "photos/thumb", locals: { photo: photo, path: admin_site_photo_path(photo) } %>
    <%- l1 = link_to del_icon, admin_site_photo_path(photo.id), method: :delete, data: { confirm: 'Are you sure?' } if is_stuff? %>
    <%- l2 = link_to edit_icon, edit_admin_site_photo_path(photo.id) if is_stuff? %>
    
    <%= render partial: "photos/caption", locals: { photo: photo, links: [l2,l1] } %>
     
    </div>
   
  </div>

  <% end %>
  
</div>

