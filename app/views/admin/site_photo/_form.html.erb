<%= simple_form_for([@album, @site_photo], url: admin_album_site_photo_index_path(@album.id), method: :post) do |f| %>
  <%= f.error_notification %>

    <!-- Загрузка только внешних фотографий -->

    <div class="form-group">
    <%= f.input :title,:input_html => {class: "form-control"} %>
    </div>

    <div class="form-group">
    <%= f.association :policy,:input_html => {class: "form-control"} %>
    </div>
    
    <%= f.hidden_field :image_cache %>
  
    <div class="form-group">
    <%= f.file_field :image,:input_html => {class: "form-control"} %>
    </div>
    
    <div class="form-group">
    <%= f.hidden_field :album_id, value: @album.id %>
    </div>
    
  
    <%= f.button :submit, value: t('save'),class: "btn btn-default" %>
  
<% end %>

<br>