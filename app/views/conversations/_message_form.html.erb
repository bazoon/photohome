<%=  simple_form_for :message, url: reply_user_conversation_path(@user, conversation) do |f|  %>

  <div class="form-group">
    <%= f.input :body, label: t('body'), as: :text, :input_html => {class: "form-control"} %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, t('send'), class: 'btn-primary' %>

    <%= submit_tag t('cancel'), type: :reset, class: 'btn btn-danger' %>
  </div>
<%- end %>