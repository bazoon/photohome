<%= simple_form_for :conversation, url: :user_conversations do |f|  %>
    
    <div class="form-group">
    <%= f.input :recipients, label: t('recipients'), :input_html => {data: {}} %>
    </div>

    <div class="form-group">
      <%= f.input :subject, label: t("subject"), :input_html => {class: "form-control"} %>
    </div> 

    <div class="form-group">
      <%= f.input :body, as: :text, label: t("body"), :input_html => {class: "form-control"} %>
    </div>

    <div class="form-actions">
       <%= f.button :submit, t('send'), class: 'btn-primary' %>
       <%= f.button :submit, t('cancel'), type: :reset, class: 'btn-danger' %>
    </div>

<%- end %>
