<p>
  <strong>Название:</strong>
  <%= @photo.title %>
</p>

<p>
  
  <%= image_tag @photo.image_url(:normal),class: "center" %>
</p>

<hr/>


<h4><%=  t("comments")%></h4>

<% @photo.comments.each do |c| %>

<div>
   <%= image_tag(c.user.avatar_url(:thumb),class: "img-polaroid",style: "float: left;margin-right: 5px;") %> 
  <div><%= c.comment %></div>
</div>
 <%= link_to del_icon, [current_user,@photo,c], method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy,c%>

<div style="clear: left; height: 20px;" ></div>

<% end %>

<hr/>


<%= simple_form_for([current_user,@photo,Comment.new]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :comment,placeholder: 'Здесь можно что-нибудь написать',:input_html => {:style => "width: 500px"}  %>
    <%= f.input :commentable, :as => :hidden, :input_html => { :value => "photo"  }  %>
  </div>
  <br>
 
    <%= f.submit t(:save), :class => "btn btn-default" %>
 
<% end %>

