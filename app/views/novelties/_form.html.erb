<%= simple_form_for(@novelty) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content,  :input_html => { :class => "redactor"} %>
    <%= f.input :publish_date %>
    <%= f.input :published %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
