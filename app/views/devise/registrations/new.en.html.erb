<h2><%= t("sign_up") %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {role:'form',:class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  
  
  <%= f.input :login, :autofocus => true, :required => true, :input_html => {class: "form-control", :autocomplete => "off"} %>
  <%= f.input :name, :autofocus => true, :required => true, :input_html => {class: "form-control", :autocomplete => "off"} %>
  <%= f.input :last_name, :autofocus => true, :required => true, :input_html => {class: "form-control", :autocomplete => "off"} %>
  <%= f.input :birth_date, start_year: Time.zone.now.year - 90, end_year: Time.zone.now.year - 8, as: :date, :input_html => {class: "form-control", :autocomplete => "off"}  %>

  <%= f.input :email, :required => true, :input_html => {class: "form-control", :autocomplete => "off"} %>
  <%= f.input :password, :required => true, :input_html => {class: "form-control", :autocomplete => "off"} %>
  <%= f.input :password_confirmation, :required => true, :input_html => {class: "form-control", :autocomplete => "off"} %>
  <br>
  <%= render "terms" %>  
  <%= f.input :terms_of_service,  as: :boolean, :input_html => {style: "margin: 0px"} %>
  

  <%= f.button :submit, 'Зарегистрироваться', :class => 'btn-primary' %>
  <br/>
  <br/>
<% end %>
<%= render "devise/shared/links" %>


