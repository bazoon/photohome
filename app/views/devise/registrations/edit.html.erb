<h2><%= t("edit_user") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  
  
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  
  <div class="form-group">
  <%= f.input :login, :input_html => {class: "form-control", :autocomplete => "off"}  %>
  </div>

  <div class="form-group">
  <%= f.input :name, :input_html => {class: "form-control", :autocomplete => "off"}  %>
  </div>
  
  <div class="form-group">
  <%= f.input :last_name, :autofocus => true, :required => true, :input_html => {class: "form-control", :autocomplete => "off"} %>
  </div>

  <div class="form-group">
  <%= f.input :birth_date, start_year: Time.zone.now.year - 90, end_year: Time.zone.now.year - 8, :input_html => {class: "form-control", :autocomplete => "off"}  %>
  </div>
  
  <div class="form-group">
   <%= f.input :adress, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
  
  <div class="form-group">
   <%= f.input :zip_code, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :city, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :country, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
    <%= f.input :phone, :autofocus => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :email, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :about,  :input_html => { :class => "redactor form-control"} %>
  </div>
 
  <div class="form-group">
  <%= f.input :password, :autocomplete => "off", :hint => I18n.t('leave_it_blank'), :required => false, :input_html => {class: "form-control"} %>
  </div>
  
  <div class="form-group">
  <%= f.input :password_confirmation, :required => false, :input_html => {class: "form-control"}  %>
  </div>
  
  <div class="form-group">
  <p> <%= t("avatar_picture") %>: </p>
  <%= f.file_field :avatar , :input_html => {class: "form-control"}  %>
  </div>
  
   <div class="form-group">
  <%= f.input :current_password, :hint => I18n.t('we_need_your_current_password'), :required => true, :input_html => {class: "form-control"}  %>
  </div>

  <%= f.button :submit, 'Update', :class => 'btn-primary' %>
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= link_to I18n.t('cancel_account'), registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
<%= link_to "Back", :back %>
