<h2><%= t("edit_user") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  
  
  <%= f.error_notification %>
  <%= display_base_errors resource %>
  
  
  <div class="form-group">
  <%= f.input :name, :autocomplete => "off",:input_html => {class: "form-control"}  %>
  </div>
  
  <div class="form-group">
  <%= f.input :last_name, :autofocus => true, :required => true, :input_html => {class: "form-control"} %>
  </div>
  
  <div class="form-group">
   <%= f.input :adress, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
  
  <div class="form-group">
   <%= f.input :zip_code, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :city, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :country, :autofocus => true, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
    <%= f.input :phone, :autofocus => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :email, :required => true, :input_html => {class: "form-control"}  %>
  </div>
 
  <div class="form-group">
   <%= f.input :about,  :input_html => { :class => "redactor form-control"} %>
  </div>
 
  <div class="form-group">
  <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, :input_html => {class: "form-control"} %>
  </div>
  
  <div class="form-group">
  <%= f.input :password_confirmation, :required => false, :input_html => {class: "form-control"}  %>
  </div>
  
  <div class="form-group">
  <%= f.file_field :avatar, :input_html => {class: "form-control"}  %>
  </div>
  
   <div class="form-group">
  <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, :input_html => {class: "form-control"}  %>
  </div>

  <%= f.button :submit, 'Update', :class => 'btn-primary' %>
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
<%= link_to "Back", :back %>
