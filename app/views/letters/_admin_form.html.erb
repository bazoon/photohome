<%= simple_form_for([from_user, letter], url: admin_user_letter_post_path) do |f| %>
  
  <%= f.error_notification %>

    <div class="form-group">
    <%= f.input :title,:input_html => {class: "form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :content,:input_html => {class: "form-control"} %>
    </div>
    <div class="form-group">
    <%= f.input :user_id, as: :hidden,:input_html => {class: "form-control"} %>
    </div>

    <div class="form-group">
    <%= f.input :people_tokens, :input_html => {data: {load:  [{id: to_user.id, name: to_user.full_name}] }   } %>
    </div>
  
    
    
    <%= f.button :submit, value: t('save'),input_html: {class: "btn btn-default"} %>
  
<% end %>
