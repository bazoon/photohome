

  <% if @setting_decorator.photos  %>
     
 <div class="fotorama" data-autoplay="true" style="position:relative;margin-right:10%;margin-left:10%;" >
     <% @setting_decorator.photos.each do |photo| %>
      <img src="<%= photo.image_url(:carousel) %>" /> 
     <% end %> 
  </div>
 
 

  <% end %>


  
  <% if @setting_decorator.novelty  %>
  <div class="jumbotron" style="padding:0px">
  <h2> <%=  @setting_decorator.novelty.title %> </h2>
    <div>
      <img src = "<%= @setting_decorator.novelty.first_image_src %>" height="30%" width="30%" style="float: left; padding-right: 20px;" />
      <p><%= raw @setting_decorator.novelty.digest %> <%= link_to t("more"), novelty_path(@setting_decorator.novelty) %> </p>
    </div>
  </div>
  <% end %>




<div style="clear:both;"></div>

  <% if @setting_decorator.first_article %>
    
    <h3>Статьи</h3>
      
      <div>
        <img src = "<%= @setting_decorator.first_article.first_image_src %>" height="30%" width="30%" style="float: left; padding-right: 20px;" />
        <p><%= raw @setting_decorator.first_article.digest %> <%= link_to t("more"), article_path(@setting_decorator.first_article) %></p>
      </div>
     
    <div style="clear:both;padding-top: 20px"></div>
      
      <div class="row">
      
      <% @setting_decorator.other_articles.each_with_index  do |article,index| %>
      
        <div class="col-sm-3">
          <a href=<%= article_path(article) %> class="thumbnail" >
            <img src = "<%= article.first_image_src %>" style="height: 100px" />
          </a>
          <div class="caption">
            <%= article.title %>
          </div>  
        </div>  
      
      <% end %>
     </div>

  <% end %>

<div style="clear:both;"></div>



  <% if @last_photos  %>
  <h3>Последние фотографии</h3>
  <div class="row" style="padding-bottom: 70px">    
 
      <% @last_photos.each do |photo|  %>
       <div class="col-sm-3">
     
         
         <%= render partial: "photos/thumb", locals: { photo: photo, path: gallery_show_path(photo) } %>
         <%= render partial: "photos/caption", locals: { photo: photo, links: [] } %>
     
       </div>
      <% end %>      
  </div>

  <% end %>