<h1><%= @album.title %></h1>
<br>

<%= render partial: "description", locals: {album: @album} %>

<div class="fotorama" data-shuffle="false" data-nav="thumbs" data-width="100%" >
			
		 <a href="<%= @site_photo.image_url(:normal) %>" data-fit="scaledown"></a>
     <% @others.each do |photo| %>
	   	
	   	<% unless photo.id == @site_photo.id  %>  
	     <a href="<%= photo.image_url(:normal) %>" data-fit="scaledown"></a>
     	<% end %>
     
     <% end %> 

</div>

<!-- !!! Нужно предусмотреть переход если фото загружено само по себе без пользователя -->

<button type="button" class="btn btn-default btn-lg">

	<%= link_to comment_icon, site_photo_path(@site_photo), class: 'comlink' %>
</button>

