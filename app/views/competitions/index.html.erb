<% breadcrumb :competitions %>

<h1><%= t(".list") %></h1>

<%= will_paginate @competitions %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(".title") %></th>
      <th><%= t(".last_date") %></th>
      <th><%= t(".open_date") %></th>
      <th></th>
      <th></th>
      <th></th>
      
    </tr>
  </thead>

  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= link_to competition.title,view_photos_competition_path(competition) %></td>
        <td><%= ld competition.last_date %></td>
        <td><%= ld competition.open_date %></td>
        <td><%= link_to(photo_icon,  view_photos_competition_path(competition),:title => "Фотографии") %></td>
        <td><%= link_to show_icon, competition %></td>
        <td><%= link_to request_icon, competition_requests_path(competition), method: :post if can?(:request, competition) %></td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>
