<% meta title: "Тюменский дом фотографии",
     description: "Конкурсы тюменского дома фотографии",
     keywords: %w(конкурсы фотография Тюмень)
%>


<% breadcrumb :competitions %>

<h1><%= t(".list") %></h1>

<%= will_paginate @competitions %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t(".title") %></th>
      <th><%= t(".type") %></th>
      <th><%= t(".last_date") %></th>
      <th><%= t(".open_date") %></th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @competitions.each do |competition| %>
      <tr>
        <td><%= link_to competition.title,view_photos_competition_path(competition) %></td>
        <td><%= competition.open? ? green_label(t("open")) : red_label(t("private")) %></td>
        <td><%= ld competition.last_date %></td>
        <td><%= ld competition.open_date %></td>
        <td><%= link_to(photo_icon,  view_photos_competition_path(competition),:title => t('photos_')) %></td>
        <td><%= link_to show_icon, competition %></td>
        <% hint = competition.has_approved_request_for?(current_user) ? t('load_photos') : t('send_request') %>
        <td><%= link_to request_icon(competition.has_approved_request_for?(current_user)), competition_requests_path(competition), 
          title: hint, method: :post if can?(:request, competition) %></td>
        

       </tr>
    <% end %>
  </tbody>
</table>

<br>

<sup><%= t('hints') %></sup>
<p class="small">
  
<%= photo_icon %> : <%= t('competition_info') %>
<br>
<%= request_icon(false) %> : <%= t('send_request') %>
<br>
<%= request_icon(true) %> : <%= t('load_photos') %>


</p>


