<%= simple_form_for([current_user,@message]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :reason_id,collection: Message::REASONS, label_method: Message::LABEL, value_method: Message::VALUE,selected: 1%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
