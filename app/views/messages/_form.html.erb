<%= simple_form_for([current_user,@message]) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :title,:input_html => {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :content,:input_html => {class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.input :reason_id,collection: Message::REASONS, label_method: Message::LABEL, value_method: Message::VALUE,selected: 1,:input_html => {class: "form-control"}%>
  </div>

  
   <%= f.button :submit,class: "btn btn-default" %>
  
<% end %>

<br>
