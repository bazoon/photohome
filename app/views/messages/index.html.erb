<h1><%= t(".messages") %></h1>

<table class="table table-striped">
  <thead>
    <tr >
      <th class="span2">Title</th>
      <th><%=  t(".content")%></th>
      
      <th><%= t(".status") %></th>
      <th><%= t(".reason") %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.title %></td>
        <td><%= message.content %></td>
        <td><%= message.status_text %></td>
        <td><%= message.reason_text %></td>
        <td><%= link_to show_icon, user_message_path(current_user,message) %></td>
        <td><%= link_to edit_icon, edit_user_message_path(current_user,message) %></td>
        <td><%= link_to del_icon, user_message_path(current_user,message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t(".new"), new_user_message_path(current_user) %>
