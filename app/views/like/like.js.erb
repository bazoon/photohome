
<%- if @down %>
 var addklass = "glyphicon glyphicon-thumbs-down"
 var removeklass = "glyphicon glyphicon-thumbs-up"
<%- else %>
  
   var addklass = "glyphicon glyphicon-thumbs-up"
  var removeklass = "glyphicon glyphicon-thumbs-down"
<% end %>


like_count = $("#like_count"+<%=escape_javascript "#{@competition_photo_id}" %>).text()

<%- if @down %>
  like_count = parseInt(like_count) + 1
<% else %>
  like_count = parseInt(like_count) - 1
<% end %>

like_count = $("#like_count"+<%=escape_javascript "#{@competition_photo_id}" %>).text(like_count)



$("#like"+<%=escape_javascript "#{@competition_photo_id}" %>).removeClass(removeklass).addClass(addklass)
