<h1><%= t('.title') %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.content') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.name %></td>
        <td><%= topic.content %></td>
        <td><%= link_to content_tag(:span,"",class: "ui-icon ui-icon-folder-open"), topic %></td>
        <td><%= link_to content_tag(:span,"",class: "ui-icon ui-icon-pencil"), edit_topic_path(topic) %></td>
        <td><%= link_to content_tag(:span,"",class: "ui-icon ui-icon-minus"), topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_topic'), new_topic_path,{class: "btn btn-primary"}%>
